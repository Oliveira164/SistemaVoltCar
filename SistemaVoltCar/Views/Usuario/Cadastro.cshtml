@model SistemaVoltCar.Models.Usuario
@{
    ViewData["Title"] = "Cadastro";
}

<link href="~/css/cadastro.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="cadastro-container">
    <div class="cadastro-card">

        <div class="toggle-switch">
            <a asp-action="Login" class="toggle-btn">Login</a>
            <span class="toggle-btn active">Cadastro</span>
        </div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-center mt-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["MensagemSucesso"]
            </div>
        }

        <form asp-action="Cadastro" method="post" class="form-content">

            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <div class="input-box">
                    <i class="bi bi-person-circle icon"></i>
                    <input type="text" id="nome" name="nome" placeholder="Nome" maxlength="100" required />
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <div class="input-box">
                    <i class="bi bi-envelope-fill icon"></i>
                    <input type="email" id="email" name="email" placeholder="Email" maxlength="100" required />
                </div>
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Senha:</label>
                <div class="input-box">
                    <i class="bi bi-lock-fill icon"></i>
                    <input type="password" id="senha" name="senha" placeholder="Senha" maxlength="8" required />
                </div>
            </div>

            <button type="submit" class="btn-custom">Fazer Cadastro</button>
        </form>
    </div>
</div>