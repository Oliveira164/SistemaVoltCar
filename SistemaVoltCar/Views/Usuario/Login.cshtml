@{
    ViewData["Title"] = "Login";
}

<link href="~/css/login.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="login-container">
    <div class="login-card">

        <div class="toggle-switch">
            <span class="toggle-btn active">Login</span>
            <a asp-action="Cadastro" class="toggle-btn">Cadastro</a>
        </div>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" role="alert" style="background: rgba(220, 53, 69, 0.2); border: 1px solid #dc3545; color: #ff6b6b; border-radius: 10px;"></div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success text-center" role="alert" style="background: rgba(39, 174, 96, 0.2); border: 1px solid #27ae60; color: #2ecc71; border-radius: 10px;">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["MensagemSucesso"]
            </div>
        }

        <form asp-action="Login" method="post" class="form-content">

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <div class="input-box">
                    <i class="bi bi-envelope-fill icon"></i>
                    <input type="email" id="email" name="email" placeholder="Email" required />
                </div>
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Senha:</label>
                <div class="input-box">
                    <i class="bi bi-lock-fill icon"></i>
                    <input type="password" id="senha" name="senha" placeholder="Senha" required />
                </div>
            </div>

            <button type="submit" class="btn-custom">Fazer Login</button>

        </form>
    </div>
</div>