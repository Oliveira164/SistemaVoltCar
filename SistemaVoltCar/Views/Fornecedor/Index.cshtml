@model IEnumerable<SistemaVoltCar.Models.Fornecedor>

<div>
    <h1>Fornecedores</h1>
    <p>Veja aqui os nossos fornecedores atuais.</p>
    <p>
        <a asp-controller="Fornecedor" asp-action="CadastrarFornecedor" class="btn btn-primary">Cadastra Fornecedor</a>
    </p>
</div>
<div>
   <table class="table custom-table">
       <thead>
           <tr>
               <th>
                   @Html.DisplayNameFor(model => model.IdFornecedor)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Nome)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.CNPJ)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Telefone)
               </th>
               <th class="text-center">Ação</th>
           </tr>
       </thead>
       <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdFornecedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNPJ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td class="text-center">
                        <a asp-controller="Fornecedor" asp-action="EditarFornecedor" asp-route="@item.IdFornecedor" class="btn btn-sm btn-warning">Editar</a>
                        <span>|</span>
                        <a asp-controller="Fornecedor" asp-action="ExluirFornecedor" asp-route-id="@item.IdFornecedor"
                        onclick="return confirm('Deseja realmente excluir este item?');'" class="btn btn-sm btn-danger">Exluir</a>
                    </td>
                </tr>
            }
        </tbody>
   </table>
</div>