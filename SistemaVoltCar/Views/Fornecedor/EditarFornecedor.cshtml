@model SistemaVoltCar.Models.Fornecedor;

<div>
    <h1 class="titulo-for">Editar Fornecedor</h1>
</div>

<hr />
<div class="col-md-4">
    <form asp-action="EditarFornecedor" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input type="hidden" asp-for="IdFornecedor" class="form-control" />
            <span asp-validation-for="IdFornecedor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CNPJ" class="control-label"></label>
            <input asp-for="CNPJ" class="form-control" />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="btn">
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-success">Voltar</a>
            </div>
        </div>
    </form>
</div>